# Environment variables example file
# Copy this file to .env.local and fill in the values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# API Keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Search API
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=your_algolia_index_name

# External APIs
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# SEO Verification
NEXT_PUBLIC_GOOGLE_VERIFICATION=your_google_verification_code
NEXT_PUBLIC_BING_VERIFICATION=your_bing_verification_code
NEXT_PUBLIC_YANDEX_VERIFICATION=your_yandex_verification_code

# Authentication (if using OAuth)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# Server-only variables (not exposed to browser)
# These should be in .env.local only, not in .env file
# DATABASE_URL=your_database_connection_string
# NEXTAUTH_SECRET=your_nextauth_secret

# ===== BLOG AUTOMATION SYSTEM =====

# Blog Automation Security (Required for automated blog generation)
BLOG_AUTOMATION_SECRET=your_secret_token_for_api_authentication

# Supabase Service Role Key (Required for blog automation)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===== AI CONTENT GENERATION (At least one required) =====

# Context7 API (Preferred for content generation)
CONTEXT7_API_KEY=your_context7_api_key

# OpenAI API (Fallback option)
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude API (Fallback option)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===== WEB SEARCH APIS (Optional but recommended) =====

# Google Custom Search (Recommended for trend research)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_SEARCH_ENGINE_ID=your_custom_search_engine_id

# Bing Search API (Alternative search option)
BING_SEARCH_API_KEY=your_bing_search_api_key

# ===== IMAGE APIS (Optional for featured images) =====

# Unsplash API for high-quality stock photos
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Pexels API for additional image options
PEXELS_API_KEY=your_pexels_api_key

# ===== BLOG AUTOMATION CONFIGURATION =====

# Number of blog posts to generate per week (default: 3)
BLOG_POSTS_PER_WEEK=3

# Time of day to generate posts in HH:MM format (default: 09:00)
BLOG_GENERATION_TIME=09:00

# Timezone for scheduling (default: UTC)
BLOG_GENERATION_TIMEZONE=UTC

# Enable debug logging for blog generation
DEBUG_BLOG_GENERATION=false

# Test mode generates shorter content for development
BLOG_TEST_MODE=false