# Environment variables example file
# Copy this file to .env.local and fill in the values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# API Keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Search API
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=your_algolia_index_name

# External APIs 
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# SEO Verification
NEXT_PUBLIC_GOOGLE_VERIFICATION=your_google_verification_code
NEXT_PUBLIC_BING_VERIFICATION=your_bing_verification_code
NEXT_PUBLIC_YANDEX_VERIFICATION=your_yandex_verification_code

# Authentication (if using OAuth)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# Server-only variables (not exposed to browser)
# These should be in .env.local only, not in .env file
# DATABASE_URL=your_database_connection_string
# NEXTAUTH_SECRET=your_nextauth_secret 